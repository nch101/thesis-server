{
  	"appenders": {
		"access": {
			"type": "dateFile",
			"filename": "log/access.log",
			"pattern": "-yyyy-MM-dd",
			"daysToKeep": 3,
			"category": "http"
		},
		"app": {
			"type": "file",
			"filename": "log/app.log",
			"maxLogSize": 10485760,
			"numBackups": 3
		},
		"errorFile": {
			"type": "file",
			"filename": "log/errors.log"
		},
		"errors": {
			"type": "logLevelFilter",
			"level": "ERROR",
			"appender": "errorFile"
		},
		"data": {
			"type": "file",
			"filename": "log/data.log",
			"maxLogSize": 10485760,
			"category": [ "data-received", "data-send" ]
		}
  	},
  	"categories": {
		"default": { "appenders": [ "app", "errors" ], "level": "DEBUG" },
		"http": { "appenders": [ "access" ], "level": "DEBUG" },
		"data-received": { "appenders": [ "data" ], "level": "DEBUG"},
		"data-send": { "appenders": [ "data" ], "level": "DEBUG"}
  	}
}
