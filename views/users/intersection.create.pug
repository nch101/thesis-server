extends layout

block head
    include map.head.pug
    style.
        html {
            scroll-behavior: smooth;
        }

block navbar 
    - var isActive = 'create'
    include navbar

block content
    span.create-header Tạo hệ thống đèn giao thông
    form.i-container(action='/admin/intersection', method='post')
        .i-map-container
            .btn-container
                button#line-tool.btn(type='button')
                    i.fas.fa-route
                button#delete-tool.btn(type='button')
                    i.fas.fa-trash-alt
            #map
        .i-form-container
            .form-group
                input#intersectionName.form-control(type='text', name='intersectionName', required='', style='text-transform: uppercase;')
                label(for='intersectionName') Tên giao lộ
                .line
            .select-list-group
                label(for='numStreet', name='numStreet') Số ngã
                select#numStreet(onchange='renderFormStreet()')
                    option(value='0', selected) Chọn số ngã
                    option(value='3') 3
                    option(value='4') 4
            button(type='submit') Tạo
        #info-street.i-form-container
    script(src='/javascripts/intersection.create.js')
    //- script(src='/javascripts/intersection.mapbox.js')
    script.
        window.scrollTo(0, 500);