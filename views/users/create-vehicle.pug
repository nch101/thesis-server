extends layout

block navbar 
    - var isActive = 'create'
    include navbar

block content
    span.create-header Tạo phương tiện ưu tiên
    form.create-container(action='/admin/device', method='post')
        .create-item
            .form-group
                input#company.form-control(type='text', name='company', required='')
                label(for='company') Tổ chức
                div
            .form-group
                input#license_plate.form-control(type='text', name='license_plate', required='', style='text-transform:uppercase;')
                label(for='license_plate') Biển kiểm soát
                div
        .create-item
            .form-group
                input#password.form-control(type='password', name='password', required='')
                label(for='password') Mật khẩu
                div
            .form-group
                input#confirm_password.form-control(type='password', required='', onkeyup='checkPassword()')
                label(for='confirm_password') Xác nhận mật khẩu
                div
        .create-item
            .form-group
                input#phone.form-control(type='text', name='phone', required='')
                label(for='phone') Số điện thoại
                div
            .form-group
                input#address.form-control(type='text', name='address', required='')
                label(for='address') Địa chỉ
                div
        button(type='submit', style='top: 290px') Tạo tài khoản
