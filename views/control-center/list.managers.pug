extends layout

mixin infoManager(item, index)
    tr
        td #{ index + 1 }
        td.main-content #{ item.lastname }
        td.main-content #{ item.firstname }
        td #{ item.phone }
        td #{ item.email }
        td 
            if item.status == 'online'
                span.badge.online-status Đang hoạt động
            else
                span.badge.offline-status Không hoạt động
        td
            if item.blocked == false
                button.btn-func.btn-block(id = item._id, onclick='onBlock(this.id)')
                    i.fas.fa-ban
                    span.tool-tip Block
            else 
                button.btn-func.btn-unblock(id = item._id, onclick='onUnblock(this.id)')
                    i.far.fa-circle
                    span.tool-tip Unblock
            button.btn-func.btn-delete(id = item._id, onclick='onDelete(this.id)')
                i.fas.fa-trash
                span.tool-tip Xóa

block navbar
    - var isActive = 'list'
    include navbar

block content
    span.create-header Danh sách ..
    .list-container
        .list-box.list-page
            table.list-table
                thead
                    tr
                        th STT
                        th.main-content Họ
                        th.main-content Tên
                        th Số điện thoại
                        th Email
                        th Trạng thái hoạt động
                        th Hành động
                tbody
                    each item, index in managers
                        +infoManager(item, index)

block addFile
    script(src='/javascripts/lib/axios.min.js')
    script(src='/javascripts/list.managers.js')